@page
@model NET_Project_Server.Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Register page";
}
<div class="text-left mb-2">
    <h1 class="mystyle">Please fill you details below</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" autocomplete="on">

            <div class="form-group mb-3">
                <label class="control-label">Name</label>
                <input asp-for="client.Name" class="form-control" />
                <span asp-validation-for="client.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">ID</label>
                <input asp-for="client.ID" min="1" max="1000" step="1" type="number" class="form-control" />
                <span asp-validation-for="client.ID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Phone number</label>
                <input asp-for="client.Phone" class="form-control" />
                <span asp-validation-for="client.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Country</label><br>
                @Html.DropDownList("SelectedCountry", new SelectList(Model.countries))
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" autofocus />
            </div>
        </form>
    </div>
</div>
